<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="615.0" prefWidth="1211.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.ero.storesimulationapp.MainController">
  <padding>
    <Insets bottom="20.0" />
  </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="Симуляция">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#saveSimulationController" text="Сохранить" />
           <MenuItem mnemonicParsing="false" onAction="#fillDefaultButtonClick" text="Заполнить стандартными данными" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <children>
         <Canvas fx:id="simulationCanvas" height="448.0" width="1211.0" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="52.0" prefWidth="1211.0" spacing="20.0">
      <children>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <children>
               <TextField fx:id="seedField" prefHeight="22.0" prefWidth="132.0" promptText="Сид" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Шаг симуляции:" />
               <Slider fx:id="simulationStepSlider" max="60.0" min="1.0" value="10.0" />
               <Label fx:id="simulationStepSliderInfo" text="10 мин" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="184.0">
            <children>
               <TextField fx:id="durationSimulationField" prefHeight="22.0" prefWidth="190.0" promptText="Длительность симуляции(в днях)" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="100.0">
            <children>
               <TextField fx:id="storeReceiptsFromField" prefHeight="22.0" prefWidth="132.0" promptText="Диапазон от" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>
               <TextField fx:id="storeReceiptsToField" prefHeight="22.0" prefWidth="132.0" promptText="Диапазон до" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>
               <TextField fx:id="storeReceiptServiceTimeFromField" prefHeight="22.0" prefWidth="132.0" promptText="Диапазон от" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>
               <TextField fx:id="storeReceiptServiceTimeToField" prefHeight="22.0" prefWidth="132.0" promptText="Диапазон до" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="Скорость" />
               <Slider fx:id="speedSlider" blockIncrement="0.001" max="1.0" min="1.0E-4" prefHeight="13.0" prefWidth="156.0" value="0.1" />
               <Label fx:id="speedSliderInfo" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="41.0" prefWidth="821.0" spacing="50.0">
      <children>
         <Button fx:id="pauseBTN" mnemonicParsing="false" onAction="#onPauseButtonClick" prefHeight="22.0" prefWidth="85.0" text="Пауза" visible="false" />
         <Button fx:id="startBTN" mnemonicParsing="false" onAction="#onStartButtonClick" prefHeight="22.0" prefWidth="85.0" text="Старт" />
         <Button fx:id="stopBTN" mnemonicParsing="false" onAction="#onStopButtonClick" prefHeight="22.0" prefWidth="85.0" text="Остановить" visible="false" />
      </children>
   </HBox>
</VBox>
